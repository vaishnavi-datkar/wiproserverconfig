spring.application.name=Order-ms

server.port=9012

eureka.client.service-url.defaultZone=http://localhost:8761/eureka/

spring.application.name=payment-ms

spring.datasource.url=jdbc:mysql://localhost:3306/order_db?allowPublicKeyRetrieval=true&useSSL=false
spring.datasource.username=root
spring.datasource.password=Root

# Hibernate dialect for MySQL
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# \uD83D\uDD27 THIS IS THE KEY PART
spring.jpa.hibernate.ddl-auto=update

# Optional: To show SQL queries in console
spring.jpa.show-sql=true