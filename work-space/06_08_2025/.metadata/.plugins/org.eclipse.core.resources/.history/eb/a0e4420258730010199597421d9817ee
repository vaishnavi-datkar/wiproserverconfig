package com.wipro.notification.controller;

import com.wipro.notification.entity.Notification;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/notification")
public class NotificationController {

    @PostMapping("/send")
    public String sendNotification(@RequestBody Notification notification) {
        System.out.println("Notification Sent to: " + notification.getEmail());
        System.out.println("Message: " + notification.getMessage());
        return "Notification sent successfully to " + notification.getEmail();
    }
}
