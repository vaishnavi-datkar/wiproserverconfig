package com.wipro.orderms.controller;

import com.wipro.orderms.dto.OrderDTO;
import com.wipro.orderms.dto.PaymentDTO;
import org.springframework.http.*;
import org.springframework.web.bind.annotation.*;
import org.springframework.web.client.RestTemplate;

import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;

@RestController
@RequestMapping("/order")
public class OrderController {

    private List<Order> orders = new ArrayList<>();
    private RestTemplate restTemplate = new RestTemplate();

    @PostMapping
    public ResponseEntity<String> createOrder(@RequestBody Order order) {
        // Step 1: Set status to Initiated
        order.setStatus("I");
        orders.add(order);

        // Step 2: Call Payment MS
        String paymentUrl = "http://localhost:9011/payment"; // Payment MS URL
        Payment paymentRequest = new Payment(order.getId(), false);

        try {
            ResponseEntity<Payment> paymentResponse =
                    restTemplate.postForEntity(paymentUrl, paymentRequest, Payment.class);

            // Step 3: Update order status based on Payment MS response
            if (paymentResponse.getStatusCode() == HttpStatus.OK &&
                paymentResponse.getBody() != null &&
                paymentResponse.getBody().isPaymentStatus()) {
                order.setStatus("P"); // Paid
            } else {
                order.setStatus("C"); // Cancelled
            }
        } catch (Exception e) {
            order.setStatus("C"); // Cancelled on any error
        }

        return ResponseEntity.status(HttpStatus.CREATED)
                .header("created-at", LocalDate.now().toString())
                .body("Order Created. Status: " + order.getStatus());
    }

    @GetMapping
    public List<Order> getAllOrders() {
        return orders;
    }
}
